
T:   myTagger
{
s:   Set
     "\myTagger.exe" /Set /path="!\\" /files=!&
g:   Get
     "\myTagger.exe" /Get /path="!\!.!"
f:   Find
     "\myTagger.exe" /Find /path="!\\"
     tmp:"\myTagger.exe.temp"
     lua: Keys("AltF7 * . * TAB DEL ENTER")
r:   Remove
     "\myTagger.exe" /Rem /path="!\\" /files=!&
l:   Show Last Search
     tmp:"\myTagger.exe.temp"
:    Import
     "\myTagger.exe" /Imp /path="!\\"
:    Export
     "\myTagger.exe" /Exp /path="!\\"
}
